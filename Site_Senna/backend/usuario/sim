$id_usuario = $pdo->lastInsertId(); // pega o id do usuÃ¡rio inserido
        
        $sqlFuncionario = "INSERT INTO funcionario 
            (id_usuario, nome_funcionario) 
            VALUES (:id_usuario, :nome_funcionario)";
        $stmt = $pdo->prepare($sqlFuncionario);
        $stmt->bindParam(":id_usuario", $id_usuario);
        $stmt->bindParam(":nome_funcionario", $nome_usuario);
        $stmt->execute();